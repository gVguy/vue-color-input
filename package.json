{
  "name": "vue-color-input",
  "version": "1.0.9",
  "description": "Slick and perfomant vue 3 color picker component whose goal is to replace <input type=color>",
  "keywords": [
    "vue",
    "color",
    "input",
    "picker",
    "vue-color-input"
  ],
  "author": "Ivan Che <ivan.chepurin@gmail.com>",
  "license": "MIT",
  "repository": "gVguy/vue-color-input",
  "main": "dist/color-input.ssr.js",
  "browser": "dist/color-input.esm.js",
  "module": "dist/color-input.esm.js",
  "unpkg": "dist/color-input.min.js",
  "files": [
    "dist/*",
    "src/**/*.vue",
    "src/assets/*.svg"
  ],
  "sideEffects": ["**/*.css"],
  "scripts": {
    "dev": "vite dev",
    "prebuild": "rimraf ./dist",
    "build": "vite build",
    "build:demo": "vite build --config vite.config-demo.js",
    "publish:demo": "gh-pages -d demo",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "tinycolor2": "^1.4.2"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.1",
    "autoprefixer": "^10.3.7",
    "gh-pages": "^3.2.3",
    "postcss": "^8.2.10",
    "sass": "^1.42.1",
    "vite": "^5.3.5",
    "vue": "^3.4.26"
  },
  "peerDependencies": {
    "vue": "^3.0.5"
  },
  "engines": {
    "node": ">=14"
  }
}
